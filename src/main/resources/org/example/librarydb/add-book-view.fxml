<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.librarydb.controllers.AddBookController">
    <TextField fx:id="titleField" promptText="Title"/>
    <TextField fx:id="authorField" promptText="Author"/>
    <TextField fx:id="publicationYearField" promptText="Publication Year"/>
    <Button text="Add Book" onAction="#onAddBookButtonClick" />
    <Button text="Main Menu" onAction="#onReturnToMenuButtonClick" />

</VBox>