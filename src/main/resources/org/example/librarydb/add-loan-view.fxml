<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.librarydb.controllers.AddLoanController">
    <TextField fx:id="readerIdField" promptText="Reader ID"/>
    <TextField fx:id="bookIdField" promptText="Book ID"/>
    <TextField fx:id="loanDateField" promptText="Loan Date (YYYY-MM-DD)"/>
    <TextField fx:id="returnDateField" promptText="Return Date (YYYY-MM-DD)"/>
    <Button text="Add Loan" onAction="#onAddLoanButtonClick"/>
    <Button text="Main Menu" onAction="#onReturnToMenuButtonClick" />
</VBox>