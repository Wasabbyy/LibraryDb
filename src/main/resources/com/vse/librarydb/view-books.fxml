<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<Pane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.ViewBooksController"
      stylesheets="@styles.css"
      style="-fx-background-color: #2b2b2b;"
      prefWidth="1000" prefHeight="800">

    <!-- Back button -->
    <Button fx:id="backButton" text="Back" onAction="#onReturnToMenuButtonClick"
            layoutX="20" layoutY="20"
            styleClass="back-button"/>

    <!-- Title at fixed 450px position -->
    <Label text="Book List" layoutX="450" layoutY="30"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4b4a" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <!-- ListView -->
    <ListView fx:id="booksListView" styleClass="dark-list-view"
              layoutX="100" layoutY="100"
              style="-fx-pref-width: 800; -fx-pref-height: 500;"/>
</Pane>