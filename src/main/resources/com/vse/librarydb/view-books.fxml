<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vse.librarydb.controllers.ViewBooksController"
            stylesheets="@styles.css"
            style="-fx-background-color: #2b2b2b;"
            prefWidth="1000" prefHeight="800">

    <!-- Top panel with title and back button -->
    <top>
        <HBox style="-fx-background-color: #424242; -fx-padding: 15;">
            <Button fx:id="backButton" text="Back" onAction="#onReturnToMenuButtonClick"
                    styleClass="back-button"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Book List" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
                <effect>
                    <DropShadow color="#4a4b4a" radius="5" spread="0.2"/>
                </effect>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <ListView fx:id="booksListView" styleClass="dark-list-view"
                  style="-fx-pref-width: 800; -fx-pref-height: 500;"/>
    </center>
</BorderPane>