<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<Pane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.ViewLoansController"
      stylesheets="@styles.css"
      style="-fx-background-color: #2b2b2b;"
      prefWidth="1000" prefHeight="800">

    <!-- Back button -->
    <Button fx:id="backButton" text="Back" onAction="#onReturnToMenuButtonClick"
            layoutX="20" layoutY="20"
            styleClass="back-button"/>
    <Label fx:id="databaseStatusLabel" text="Database: Checking..."
           style="-fx-text-fill: grey; -fx-font-weight: bold;"
           layoutX="800" layoutY="20"/>

    <!-- Title at fixed 450px position -->
    <Label text="Loan List" layoutX="450" layoutY="30"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4b4a" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <!-- ListView -->
    <ListView fx:id="loansListView" styleClass="dark-list-view"
              layoutX="100" layoutY="100"
              style="-fx-pref-width: 800; -fx-pref-height: 450; -fx-max-height: 250"/>

    <!-- Search Section -->
    <Label text="Filter Loans:" layoutX="100" layoutY="370"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>

    <!-- Book Search -->
    <Label text="By Book Title:" layoutX="100" layoutY="400"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 12px;"/>

    <TextField fx:id="bookSearchField" promptText="Enter book title"
               layoutX="100" layoutY="420"
               style="-fx-pref-width: 340; -fx-background-color: #3c3f41; -fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>

    <Button text="Search" onAction="#onBookSearch"
            layoutX="450" layoutY="420"
            styleClass="search-button"/>

    <!-- Reader Search -->
    <Label text="By Reader name:" layoutX="100" layoutY="500"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 12px;"/>

    <Button text="Search" onAction="#onReaderSearch"
            layoutX="450" layoutY="520"
            styleClass="search-button"/>

    <TextField fx:id="readerSearchField" promptText="Enter reader name"
               layoutX="100" layoutY="520"
               style="-fx-pref-width: 340; -fx-background-color: #3c3f41; -fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>

    <Button text="Search" onAction="#onReaderSearch"
            layoutX="450" layoutY="520"
            styleClass="search-button"/>

</Pane>