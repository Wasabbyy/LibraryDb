<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.vse.librarydb.controllers.AddReaderController">
    <Label fx:id="welcomeText" text="Welcome to the Library App!" />
    <TextField fx:id="firstNameField" promptText="First Name" />
    <TextField fx:id="lastNameField" promptText="Last Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button text="Add Reader" onAction="#onAddReaderButtonClick" />
    <Button text="Main Menu" onAction="#onReturnToMenuButtonClick" />
</VBox>