<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.AddLoanController"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="Create New Loan" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <Label text="Reader ID:" />
    <TextField fx:id="readerIdField" promptText="Enter reader ID"
               style="-fx-pref-width: 300; -fx-padding: 5;" />

    <Label text="Book ID:" />
    <TextField fx:id="bookIdField" promptText="Enter book ID"
               style="-fx-pref-width: 300; -fx-padding: 5;" />

    <Label text="Loan Date:" />
    <TextField fx:id="loanDateField" promptText="YYYY-MM-DD"
               style="-fx-pref-width: 300; -fx-padding: 5;" />

    <Label text="Rent Period (Days):" />
    <TextField fx:id="rentPeriodField" promptText="Enter number of days"
               style="-fx-pref-width: 300; -fx-padding: 5;" />

    <Button text="Create Loan" onAction="#onAddLoanButtonClick"
            style="-fx-pref-width: 300; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8;" />

    <Button text="Main Menu" onAction="#onReturnToMenuButtonClick"
            style="-fx-pref-width: 300; -fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8;" />
</VBox>