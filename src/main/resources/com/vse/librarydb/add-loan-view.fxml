<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.AddLoanController"
      stylesheets="@styles.css"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;" prefWidth="1000" prefHeight="800">

    <Label text="Create New Loan" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
        </effect>
    </Label>
    <Label fx:id="databaseStatusLabel" text="Database: Checking..."
           style="-fx-text-fill: grey; -fx-font-weight: bold;"
           layoutX="800" layoutY="20"/>

    <Label text="Select Reader:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
    <ComboBox fx:id="readerComboBox" promptText="Choose a reader" styleClass="dark-combo-box"
              style="-fx-pref-width: 400; -fx-pref-height: 40;"/>

    <Label text="Select Book:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
    <ComboBox fx:id="bookComboBox" promptText="Choose a book" styleClass="dark-combo-box"
              style="-fx-pref-width: 400; -fx-pref-height: 40;"/>

    <Label text="Loan Duration (days):" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
    <TextField fx:id="daysField" promptText="Enter loan duration (e.g., 14)" styleClass="dark-text-field"
               style="-fx-pref-width: 400; -fx-max-width: 400;  -fx-pref-height: 40;"/>

    <Button text="Create Loan" onAction="#onSaveLoanButtonClick" styleClass="save-button"
            style="-fx-pref-width: 200; -fx-pref-height: 40;"/>

    <Button text="Main Menu" onAction="#onReturnToMenuButtonClick" styleClass="action-button"
            style="-fx-pref-width: 200; -fx-pref-height: 40;"/>
</VBox>