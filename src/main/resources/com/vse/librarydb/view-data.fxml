<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.DropShadow?>

<Pane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.ViewDataController"
      style="-fx-background-color: #2b2b2b;" prefWidth="1000" prefHeight="800">

    <!-- Back button with fx:id matching controller -->
    <Button fx:id="backButton" text="Back to Main Menu" onAction="#onReturnToMenuButtonClick"
            layoutX="20" layoutY="20"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-weight: bold;"/>
    <Label fx:id="databaseStatusLabel" text="Database: Checking..."
           style="-fx-text-fill: grey; -fx-font-weight: bold;"
           layoutX="800" layoutY="20"/>

    <!-- Title -->
    <Label text="View Data" layoutX="450" layoutY="30"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <!-- Buttons container with proper fx:ids -->
    <VBox layoutX="400" layoutY="250" alignment="CENTER" spacing="20">
        <Button fx:id="viewReadersButton" text="View Readers" onAction="#onViewReadersButtonClick"
                style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-pref-width: 200; -fx-pref-height: 40;"/>

        <Button fx:id="viewBooksButton" text="View Books" onAction="#onViewBooksButtonClick"
                style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-pref-width: 200; -fx-pref-height: 40;"/>

        <Button fx:id="viewLoansButton" text="View Loans" onAction="#onViewLoansButtonClick"
                style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-pref-width: 200; -fx-pref-height: 40;"/>
    </VBox>
</Pane>