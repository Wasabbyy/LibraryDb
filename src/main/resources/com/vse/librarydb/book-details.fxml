<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.BookDetailsController"
      stylesheets="@styles.css"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;"
      prefWidth="1500" prefHeight="1000">

    <Label text="Book Details" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
            <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
        </columnConstraints>

        <!-- View Mode -->
        <Label text="Title:" styleClass="detail-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="bookTitleLabel" text="" styleClass="detail-label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Author:" styleClass="detail-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="bookAuthorLabel" text="" styleClass="detail-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Year:" styleClass="detail-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="bookYearLabel" text="" styleClass="detail-label" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Note:" styleClass="detail-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="bookNoteLabel" text="" styleClass="detail-label" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Edit Mode (initially hidden) -->
        <Label text="Title:" styleClass="detail-label" visible="false"
               fx:id="titleEditLabel" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleTextField" promptText="Edit title" visible="false"
                   styleClass="dark-text-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Author:" styleClass="detail-label" visible="false"
               fx:id="authorEditLabel" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="authorTextField" promptText="Edit author" visible="false"
                   styleClass="dark-text-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Year:" styleClass="detail-label" visible="false"
               fx:id="yearEditLabel" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="yearTextField" promptText="Edit year" visible="false"
                   styleClass="dark-text-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Loans:" styleClass="section-header"/>
    <ListView fx:id="loansListView" styleClass="dark-list-view"
              style="-fx-pref-width: 800; -fx-pref-height: 300;"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Edit" onAction="#onEdit" styleClass="action-button"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSave" visible="false"
                styleClass="save-button"/>
    </VBox>
</VBox>