<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.ReaderDetailsController"
      stylesheets="@styles.css"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;"
      prefWidth="1000" prefHeight="800">

    <Label text="Reader Details" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <Label fx:id="databaseStatusLabel" text="Database: Checking..."
           style="-fx-text-fill: grey; -fx-font-weight: bold;"
           layoutX="800" layoutY="20"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
            <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
        </columnConstraints>

        <!-- View Mode -->
        <Label text="Full name:" styleClass="detail-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="readerNameLabel" text="" styleClass="detail-label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" styleClass="detail-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="readerEmailLabel" text="" styleClass="detail-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Edit Mode (initially hidden) -->
        <Label text="Full name:" styleClass="detail-label" visible="false"
               fx:id="nameEditLabel" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameTextField" promptText="Edit name" visible="false"
                   styleClass="dark-text-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" styleClass="detail-label" visible="false"
               fx:id="emailEditLabel" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailTextField" promptText="Edit email" visible="false"
                   styleClass="dark-text-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Loans:" styleClass="section-header"/>
    <ListView fx:id="loansListView" styleClass="dark-list-view"
              style="-fx-pref-width: 800; -fx-pref-height: 300;"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Edit" onAction="#onEdit" styleClass="action-button"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSave" visible="false"
                styleClass="save-button"/>
    </VBox>
</VBox>