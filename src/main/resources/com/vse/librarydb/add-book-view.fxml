<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.AddBookController"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;" prefWidth="1000" prefHeight="800">

    <Label text="Add New Book" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
        </effect>
    </Label>
    <Label fx:id="databaseStatusLabel" text="Database: Checking..."
           style="-fx-text-fill: grey; -fx-font-weight: bold;"
           layoutX="800" layoutY="20"/>

    <Label text="Title:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
    <TextField fx:id="titleField" promptText="Enter book title"
               style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 400; -fx-pref-height: 40;"/>

    <Label text="Author:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
    <TextField fx:id="authorField" promptText="Enter author name"
               style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 400; -fx-pref-height: 40;"/>

    <Label text="Publication Year:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
    <TextField fx:id="publicationYearField" promptText="Enter publication year"
               style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 400; -fx-pref-height: 40;"/>

    <Button text="Add Book" onAction="#onAddBookButtonClick"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40; -fx-font-weight: bold;"/>

    <Button text="Main Menu" onAction="#onReturnToMenuButtonClick"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40; -fx-font-weight: bold;"/>
</VBox>