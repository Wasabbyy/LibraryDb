<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vse.librarydb.controllers.ReturnBooksController"
      stylesheets="@styles.css"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;" prefWidth="1000" prefHeight="800">

    <Label text="Return Books" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
        <effect>
            <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <ListView fx:id="loanedBooksListView" styleClass="dark-list-view"
              style="-fx-pref-width: 800; -fx-pref-height: 500;"/>


    <Button text="Return Selected Book" onAction="#onReturnButtonClick"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-min-width: 200; -fx-min-height: 40; -fx-pref-height: 40; -fx-font-weight: bold;"/>

    <Button fx:id="returnButton" text="Back to Menu" onAction="#onReturnToMenuButtonClick"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-min-width: 200; -fx-min-height: 40; -fx-pref-height: 40; -fx-font-weight: bold;"/>
</VBox>