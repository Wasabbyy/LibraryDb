<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vse.librarydb.controllers.IntroController">
    <!-- Background image solution -->
    <children>
        <ImageView fitWidth="1100.0" fitHeight="600.0" preserveRatio="false">
            <image>
                <Image url="@library.jpg" />
            </image>
        </ImageView>
    </children>

    <!-- Top section with title and View Data button -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: rgba(43,43,43,0.7);">
            <Label text="Library Management System"
                   style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;">
                <effect>
                    <DropShadow color="#4a4a4a" radius="5" spread="0.2"/>
                </effect>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="View Data" onAction="#onViewDataButtonClick"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40;"/>
        </HBox>
    </top>

    <!-- Center section with main buttons -->
    <center>
        <VBox  fx:id="root" alignment="CENTER" spacing="20">
            <Button text="Return Books" onAction="#onReturnBooksButtonClick"
                    style="-fx-background-color: rgba(66,66,66,0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40;"/>

            <Button text="Rent Book" onAction="#onAddLoanButtonClick"
                    style="-fx-background-color: rgba(66,66,66,0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40;"/>
        </VBox>
    </center>

    <!-- Bottom section with other buttons -->
    <bottom>
        <HBox style="-fx-padding: 20;" alignment="BOTTOM_LEFT">
            <!-- Left side - Exit button -->
            <VBox alignment="BOTTOM_LEFT" spacing="20">
                <Button text="Exit" onAction="#onExitButtonClick"
                        style="-fx-background-color: rgba(244,67,54,0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Right side - Add Reader and Add Book buttons stacked vertically -->
            <VBox spacing="20" alignment="BOTTOM_RIGHT">
                <Button text="Add Reader" onAction="#onAddReaderButtonClick"
                        style="-fx-background-color:  rgba(66,66,66,0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40;"/>

                <Button text="Add Book" onAction="#onAddBookButtonClick"
                        style="-fx-background-color:  rgba(66,66,66,0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40;"/>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>